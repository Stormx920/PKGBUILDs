pkgname=watermelonOS
pkgver=1.0
pkgrel=1
pkgdesc="watermelonOS by Tyrone Watermelon"
arch=('x86_64')
url="https://github.com/stormx920/watermelonOS"
license=(MIT)
depends=(libxinerama libx11 libxft)
makedepends=(git)
provides=($pkgname)
conflicts=($pkgname)
source=(git+https://github.com/stormx920/watermelonOS)
sha256sums=('SKIP')

build(){
    cd "src/$pkgname"
    cd dmenu
    make
    cd ../dwm
    make
    cd ../slstatus
    make
    cd ../st
    make
}

package(){
    cd "$pkgname"
    cd dmenu
    make install
    cd ../dwm
    make install
    cd ../slstatus
    make install
    cd ../st
    make install
}
