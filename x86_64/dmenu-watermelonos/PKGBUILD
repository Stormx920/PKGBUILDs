pkgname="dmenu-watermelon"
_pkgname=dmenu
pkgver=5.2.r11.g3f14038
pkgrel=1
pkgdesc="Tyrone WatermelonÂ´s dmenu build"
arch=('i686' 'x86_64' 'arm' 'armv7h' 'armv6h' 'aarch64')
url="https://github.com/TyroneWatermelon420/dmenu"
license=('MIT')
provides=(dmenu)
conflicts=(dmenu)
depends=('')

source=("$_pkgname::git+https://github.com/TyroneWatermelon420/dmenu")

sha256sums=('SKIP')

pkgver(){
  cd $_pkgname
  git describe --long --tags | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  cd $_pkgname
  make
}

package() {
  cd $_pkgname
  make PREFIX=/usr DESTDIR="$pkgdir" install
  install -m644 -D LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -m644 -D README "$pkgdir/usr/share/doc/$pkgname/README"
  install -m644 -D dmenu.desktop "$pkgdir/usr/share/applications/dmenu.desktop"
}

